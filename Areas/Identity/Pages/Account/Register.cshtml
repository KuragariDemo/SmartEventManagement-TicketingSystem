@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        :root {
            --bg-gradient: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            --card-glass: rgba(255, 255, 255, 0.06);
            --card-border: rgba(255, 255, 255, 0.12);
            --primary: #8b5cf6;
            --accent: #f43f5e;
            --text-muted: #94a3b8;
            --input-bg: rgba(0, 0, 0, 0.35);
        }

        body {
            background: var(--bg-gradient);
        }

        .auth-wrapper {
            min-height: calc(100vh - 90px);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 30px 20px;
            overflow: hidden;
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: .5;
            animation: float 12s ease-in-out infinite alternate;
        }

        .orb-1 {
            width: 350px;
            height: 350px;
            background: var(--primary);
            top: 10%;
            left: 15%;
        }

        .orb-2 {
            width: 300px;
            height: 300px;
            background: var(--accent);
            bottom: 15%;
            right: 15%;
        }

        .auth-container {
            max-width: 460px;
            width: 100%;
            padding: 3rem;
            background: var(--card-glass);
            backdrop-filter: blur(25px);
            border-radius: 24px;
            border: 1px solid var(--card-border);
            box-shadow: 0 30px 60px rgba(0,0,0,.45);
            z-index: 1;
            margin-top: 100px;
        }

        .auth-logo {
            text-align: center;
            font-size: 2.2rem;
            font-weight: 800;
            color: white;
            margin-bottom: .5rem;
        }

            .auth-logo span {
                background: linear-gradient(to right, var(--primary), var(--accent));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .auth-subtitle {
            text-align: center;
            color: var(--text-muted);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.3rem;
        }

        .form-label {
            display: block;
            color: var(--text-muted);
            font-size: .9rem;
            margin-bottom: .4rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
        }

        .form-input {
            width: 100%;
            padding: 14px 16px 14px 46px;
            border-radius: 12px;
            background: var(--input-bg);
            border: 1px solid var(--card-border);
            color: white;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 14px rgba(139,92,246,.35);
            }

        .btn-submit {
            display: inline-block;
            display: flex; 
            align-items: center; 
            justify-content: center;
            width: 100%;
            padding: 14px;
            border-radius: 50px;
            border: none;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: white;
            cursor: pointer;
            margin-top: 1rem;
        }

        .auth-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--text-muted);
        }

            .auth-footer a {
                color: white;
                font-weight: 600;
                text-decoration: none;
            }
    </style>
}

<div class="auth-wrapper">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>

    <div class="auth-container">
        <div class="auth-logo">Metro<span>Culture</span></div>
        <p class="auth-subtitle">Create your membership account</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- FULL NAME -->
            <div class="form-group">
                <label asp-for="Input.FullName" class="form-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Input.FullName" class="form-input" />
                    <i class="fas fa-user input-icon"></i>
                </div>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- EMAIL -->
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Input.Email" class="form-input" />
                    <i class="fas fa-envelope input-icon"></i>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- PASSWORD -->
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Input.Password" class="form-input" />
                    <i class="fas fa-lock input-icon"></i>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <div class="input-wrapper">
                    <input asp-for="Input.ConfirmPassword" class="form-input" />
                    <i class="fas fa-key input-icon"></i>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                Confirm Membership
            </button>

            <div class="auth-footer">
                Already have an account?
                <a asp-page="./Login">Sign In</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
