@model IEnumerable<SmartEventManagement_TicketingSystem.Areas.Identity.Data.SmartEventManagement_TicketingSystemUser>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="adminadd-wrapper">

    <div class="adminadd-header">
        <i class="fas fa-users-cog" style="font-size: 2rem; color: var(--aa-primary);"></i>
        <div>
            <h2>Manage Administrators</h2>
            <span style="color: var(--aa-text-muted);">Add new admins and manage access control.</span>
        </div>
    </div>

    <div class="adminadd-grid">

        <div class="adminadd-card">
            <h3><i class="fas fa-plus-circle"></i> Add New Admin</h3>

            <form asp-action="AddAdmin" method="post">

                <div class="adminadd-form-group">
                    <label class="adminadd-label">Full Name</label>
                    <div class="adminadd-input-wrapper">
                        <i class="fas fa-user adminadd-input-icon"></i>
                        <input type="text" name="fullName" class="adminadd-input" placeholder="John Doe" required />
                    </div>
                </div>

                <div class="adminadd-form-group">
                    <label class="adminadd-label">Email Address</label>
                    <div class="adminadd-input-wrapper">
                        <i class="fas fa-envelope adminadd-input-icon"></i>
                        <input type="email" name="email" class="adminadd-input" placeholder="admin@example.com" required />
                    </div>
                </div>

                <div class="adminadd-form-group">
                    <label class="adminadd-label">Password</label>
                    <div class="adminadd-input-wrapper">
                        <i class="fas fa-lock adminadd-input-icon"></i>
                        <input type="password" name="password" class="adminadd-input" placeholder="••••••••" required />
                    </div>
                </div>

                <div class="adminadd-form-group">
                    <label class="adminadd-label">City</label>
                    <div class="adminadd-input-wrapper">
                        <i class="fas fa-map-marker-alt adminadd-input-icon"></i>
                        <input type="text" name="city" class="adminadd-input" placeholder="City Location" />
                    </div>
                </div>

                <button type="submit" class="adminadd-btn">
                    Create Admin Account
                </button>
            </form>
        </div>

        <div class="adminadd-card">
            <h3><i class="fas fa-list"></i> Existing Admins</h3>

            <div class="adminadd-table-container">
                <table class="adminadd-table">
                    <thead>
                        <tr>
                            <th>Admin Name</th>
                            <th>Email</th>
                            <th>Location</th>
                            <th style="text-align: right;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var admin in Model)
                            {
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <div style="width: 30px; height: 30px; background: rgba(56, 189, 248, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--aa-primary); font-size: 0.8rem;">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            @admin.FullName
                                        </div>
                                    </td>
                                    <td>@admin.Email</td>
                                    <td>@admin.City</td>
                                    <td style="text-align: right;">
                                        <a asp-action="DeleteAdmin"
                                           asp-route-id="@admin.Id"
                                           class="adminadd-btn-delete"
                                           onclick="return confirm('Are you sure you want to remove this admin? This action cannot be undone.')">
                                            <i class="fas fa-trash-alt"></i> Remove
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" style="text-align: center; padding: 30px; color: var(--aa-text-muted);">
                                    No other administrators found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>