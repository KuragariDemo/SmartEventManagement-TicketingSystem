@model IEnumerable<SmartEventManagement_TicketingSystem.Models.Events.Event>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="adminevt-wrapper">

    <div class="adminevt-header">
        <i class="fas fa-calendar-alt" style="font-size: 2rem; color: var(--ae-primary);"></i>
        <div>
            <h2>Manage Events</h2>
            <span style="color: var(--ae-text-muted);">Create new events and manage existing schedules.</span>
        </div>
    </div>

    <div class="adminevt-grid">

        <div class="adminevt-card">
            <h3><i class="fas fa-plus-circle"></i> Create New Event</h3>

            <form asp-action="CreateEvent" method="post" enctype="multipart/form-data">

                <div class="adminevt-form-group">
                    <label class="adminevt-label">Event Title</label>
                    <input name="Title" class="adminevt-input" placeholder="e.g. Summer Jazz Fest" required />
                </div>

                <div class="adminevt-form-group">
                    <label class="adminevt-label">Category</label>
                    <select name="CategoryId" class="adminevt-input" required>
                        <option value="" style="background: #1e293b; color: gray;">-- Select Category --</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" style="background: #1e293b;">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="adminevt-form-group">
                    <label class="adminevt-label">Venue</label>
                    <select name="VenueId" class="adminevt-input" required>
                        <option value="" style="background: #1e293b; color: gray;">-- Select Venue --</option>
                        @foreach (var venue in ViewBag.Venues)
                        {
                            <option value="@venue.Id" style="background: #1e293b;">@venue.Name</option>
                        }
                    </select>
                </div>

                <div class="adminevt-form-group">
                    <label class="adminevt-label">Event Date</label>
                    <input type="date" name="EventDate" class="adminevt-input" required />
                </div>

                <div class="adminevt-form-group adminevt-full-width">
                    <label class="adminevt-label">Seat Configuration</label>

                    <div style="display:flex; gap:20px; flex-wrap:wrap;">

                        <!-- EGO -->
                        <div>
                            <label>EGO Quantity</label>
                            <input type="number" name="EgoQuantity" class="adminevt-input" min="0" value="0" />

                            <label>EGO Price</label>
                            <input type="number" step="0.01" name="EgoPrice" class="adminevt-input" min="0" value="0" />
                        </div>

                        <!-- VIP -->
                        <div>
                            <label>VIP Quantity</label>
                            <input type="number" name="VipQuantity" class="adminevt-input" min="0" value="0" />

                            <label>VIP Price</label>
                            <input type="number" step="0.01" name="VipPrice" class="adminevt-input" min="0" value="0" />
                        </div>

                        <!-- VVIP -->
                        <div>
                            <label>VVIP Quantity</label>
                            <input type="number" name="VvipQuantity" class="adminevt-input" min="0" value="0" />

                            <label>VVIP Price</label>
                            <input type="number" step="0.01" name="VvipPrice" class="adminevt-input" min="0" value="0" />
                        </div>

                    </div>
                </div>

                <div class="adminevt-form-group">
                    <label class="adminevt-label">Cover Image</label>
                    <input type="file" name="ImageFile" class="adminevt-input adminevt-file-input" />
                </div>

                <button type="submit" class="adminevt-btn-create">
                    <i class="fas fa-check"></i> Publish Event
                </button>

            </form>
        </div>

        <div class="adminevt-card">
            <h3><i class="fas fa-list-ul"></i> All Events</h3>

            <div class="adminevt-table-container">
                <table class="adminevt-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Venue</th>
                            <th>Date</th>
                            <th>Seats</th>
                            <th>Status</th>
                            <th style="text-align: right;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var ev in Model)
                            {
                                var isFinished = ev.EventDate < DateTime.Today;

                                <tr>
                                    <td style="font-weight: 600; color: white;">@ev.Title</td>
                                    <td>@ev.Category?.Name</td>
                                    <td>@ev.Venue?.Name</td>
                                    <td>@ev.EventDate.ToShortDateString()</td>
                                    <td>$@ev.Price</td>
                                    <td>
                                        @if (ev.Seats != null && ev.Seats.Any())
                                        {
                                            foreach (var seat in ev.Seats)
                                            {
                                                <div>
                                                    @seat.SeatType
                                                    - Qty: @seat.Quantity
                                                    - $@seat.Price
                                                </div>
                                            }
                                        }
                                    </td>

                                    <td>
                                        @if (isFinished)
                                        {
                                            <span class="adminevt-status-finished">Finished</span>
                                        }
                                        else
                                        {
                                            <span class="adminevt-status-upcoming">Upcoming</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="adminevt-actions" style="justify-content: flex-end;">
                                            <a asp-action="EditEvent" asp-route-id="@ev.Id" class="adminevt-btn-action adminevt-btn-edit" title="Edit">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <a asp-action="DeleteEvent" asp-route-id="@ev.Id" class="adminevt-btn-action adminevt-btn-delete" title="Delete" onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" style="text-align: center; padding: 40px; color: var(--ae-text-muted);">
                                    No events created yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>