@model IEnumerable<SmartEventManagement_TicketingSystem.Models.Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admincat-wrapper">

    <div class="admincat-header">
        <i class="fas fa-layer-group" style="font-size: 2rem; color: var(--ac-primary);"></i>
        <div>
            <h2>Manage Categories</h2>
            <span style="color: var(--ac-text-muted);">Organize events by defining categories.</span>
        </div>
    </div>

    <div class="admincat-grid">

        <div class="admincat-card">
            <h3><i class="fas fa-plus-square"></i> Add New Category</h3>

            <form asp-action="AddCategory" method="post">

                <div class="admincat-form-group">
                    <label class="admincat-label">Category Name</label>
                    <div class="admincat-input-wrapper">
                        <i class="fas fa-tag admincat-input-icon"></i>
                        <input type="text" name="Name" class="admincat-input" placeholder="e.g. Concerts" required />
                    </div>
                </div>

                <button type="submit" class="admincat-btn-add">
                    <i class="fas fa-save"></i> Save Category
                </button>
            </form>
        </div>

        <div class="admincat-card">
            <h3><i class="fas fa-list-ul"></i> Existing Categories</h3>

            @if (Model.Any())
            {
                <div class="admincat-table-container">
                    <table class="admincat-table">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th style="width: 180px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <div style="width: 8px; height: 8px; background: var(--ac-primary); border-radius: 50%;"></div>
                                            @category.Name
                                        </div>
                                    </td>
                                    <td>
                                        <div class="admincat-actions">
                                            <a asp-action="EditCategory" asp-route-id="@category.Id" class="admincat-btn-edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="DeleteCategory" asp-route-id="@category.Id" class="admincat-btn-delete" onclick="return confirm('Are you sure you want to delete this category? Events linked to it may be affected.')">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 40px; color: var(--ac-text-muted);">
                    <i class="fas fa-folder-open" style="font-size: 2.5rem; margin-bottom: 15px; opacity: 0.5;"></i>
                    <p>No categories found. Start by adding one!</p>
                </div>
            }
        </div>

    </div>
</div>